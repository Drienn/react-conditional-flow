{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true
  },
  "extends": "airbnb",
  "globals": {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NW__" : false
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "forOf": true,
    "jsx": true,
    "modules": true,
    "spread": true
  },
  "rules": {
    // disable requiring trailing commas
    "comma-dangle": 0,
    // disable requiring capital letter for constructors
    "new-cap": 1,
    // https://davidwalsh.name/for-and-against-let
    // and "vars-on-top" is enforced
    "no-var": 0,
    "react/jsx-no-bind": [2, {
      "ignoreRefs": true
    }]

  }
}
